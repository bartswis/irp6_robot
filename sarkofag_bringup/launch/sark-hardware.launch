<launch>

  <include file="$(find rtt_ros)/launch/deployer.launch">
    <arg name="NAME" value="CONV_OROCOS_ROBOT"/>
    <arg name="DEPLOYER_ARGS" value="-s $(find sarkofag_bringup)/config/sark.ops"/>
    <arg name="LOG_LEVEL" value="Warning"/>
    <arg name="DEBUG" value="false"/>
  </include>


  <include file="$(find sarkofag_bringup)/launch/sark.launch">
  </include>

  <group ns="CONV_OROCOS_ROBOT">
    <rosparam>
      Sarkofagscheme:
        scheme_name: controller_manager
      SarkofagHardwareInterface:
        test_mode: false
        timeouts_to_print: 3
    </rosparam>
  </group>

</launch>
