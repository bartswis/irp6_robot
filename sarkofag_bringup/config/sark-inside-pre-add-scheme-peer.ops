connect("SarkofagRegulator.MeasuredPosition","SarkofagHardwareInterface.MotorPosition_sarkofag", ConnPolicy())
connect("SarkofagRegulator.deltaInc_in","SarkofagHardwareInterface.MotorIncrement_sarkofag", ConnPolicy())
